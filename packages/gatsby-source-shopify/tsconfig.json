{
  "include": ["src/**/*.ts", "types"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "lib": ["es2017", "dom", "esnext.asynciterable"]
  }
}
