{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":widenPeerDependencies", ":automergeDisabled"],
  "schedule": ["before 6am"],
  "ignorePaths": [
    "examples/**",
    "starters/**",
    "e2e-tests/**",
    "integration-tests/**",
    "benchmarks/**",
    "deprecated-packages/**",
    "**/fixtures/**",
    "**/__fixtures__/**",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**"
  ],
  "rangeStrategy": "bump",
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "enabled": false
    },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["security"],
      "prPriority": 100
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
